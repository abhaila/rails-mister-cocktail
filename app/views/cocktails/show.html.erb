<%= link_to "Back", cocktails_path, class: "btn btn-primary back-btn" %>

<div class="container text-center">
  <div class="small container">
    <h1><%= @cocktail.name %></h1>
    <table>
      <tr>
        <th>Ingredients</th>
        <th>Doses</th>
        <td><%= link_to new_cocktail_dose_path(@cocktail), class: "text-add" do %>
         <i class="fa fa-plus-circle" aria-hidden="true"></i>
         <% end %>
       </td>
       </tr>
       <% @cocktail.doses.each do |dose| %>
       <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description %></td>
        <td><%= link_to dose_path(dose), method: :delete, class: "text-delete" do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<%= link_to "Back to all cocktails", cocktails_path %>
<%= link_to "Edit", edit_cocktail_path %>
<%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
